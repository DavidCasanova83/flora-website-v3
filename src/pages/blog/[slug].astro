export async function getStaticPaths() {
  const rawPages = await getPages();
  const parsedPages: ParsedPage[] = rawPages.map(mapPageData);

  const paths = parsedPages
    .filter(page => !!page.slug)
    .map(page => ({
      params: { slug: page.slug! }
    }));

  return paths;
}

